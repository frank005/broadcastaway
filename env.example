# BroadCastaway - Live Broadcasting App Environment Configuration

# ============================================
# Agora RTC Configuration (Required)
# ============================================
# App ID is used by both frontend and backend (safe to expose)
NEXT_PUBLIC_AGORA_APP_ID=your_agora_app_id_here

# Certificate is BACKEND ONLY (never exposed to frontend)
# Used by Next.js API routes for secure token generation
AGORA_APP_CERTIFICATE=your_agora_certificate_here

# ============================================
# Agora REST API Configuration (Required for Media Services and AI Agent)
# ============================================
# You can use either AGORA_REST_API_KEY/SECRET or AGORA_CUSTOMER_ID/SECRET
AGORA_REST_API_KEY=your_agora_customer_id_here
AGORA_REST_API_SECRET=your_agora_customer_secret_here
# Alternative naming (both work):
AGORA_CUSTOMER_ID=your_agora_customer_id_here
AGORA_CUSTOMER_SECRET=your_agora_customer_secret_here
AGORA_BASE_URL=https://api.agora.io
# Region for Media Gateway (na/eu/ap/cn) - defaults to 'na' if not set
# Must be NEXT_PUBLIC_* to be accessible from frontend
NEXT_PUBLIC_AGORA_REGION=na

# ============================================
# OpenAI Configuration (Required for AI Agent)
# ============================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_URL=https://api.openai.com/v1/chat/completions
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.7

# ============================================
# TTS Configuration (Optional)
# ============================================
TTS_VENDOR=microsoft
MICROSOFT_TTS_API_KEY=your_microsoft_tts_key_here
MICROSOFT_TTS_REGION=your_microsoft_tts_region_here
MICROSOFT_TTS_VOICE=en-US-JennyNeural

# ============================================
# ASR Configuration (Optional)
# ============================================
ASR_VENDOR=agora
AGORA_ASR_LANGUAGE=en-US

# ============================================
# Feature Toggles
# ============================================
REACT_APP_ENABLE_RTM_SYNC=true
REACT_APP_ENABLE_AI_AGENT=true
REACT_APP_ENABLE_PRODUCT_HISTORY=true

# ============================================
# Cloud Recording Configuration
# ============================================
# Recording UIDs (must be unique, cannot be same as Media Push/Pull)
RECORDING_COMPOSITE_UID=7777777
RECORDING_WEBPAGE_UID=8888888

# Composite Recording Config
RECORDING_MAX_IDLE_TIME=30
RECORDING_STREAM_TYPES=2
RECORDING_AUDIO_PROFILE=0
RECORDING_CHANNEL_TYPE=0
RECORDING_VIDEO_STREAM_TYPE=0
RECORDING_TRANSCODING_WIDTH=720
RECORDING_TRANSCODING_HEIGHT=1280
RECORDING_TRANSCODING_BITRATE=3420
RECORDING_TRANSCODING_FPS=30
RECORDING_MIXED_VIDEO_LAYOUT=1

# Webpage Recording Config
RECORDING_WEB_AUDIO_PROFILE=0
RECORDING_WEB_VIDEO_WIDTH=1280
RECORDING_WEB_VIDEO_HEIGHT=720
RECORDING_WEB_MAX_RECORDING_HOUR=3

# Composite Recording Storage Configuration
RECORDING_COMPOSITE_STORAGE_ACCESS_KEY=your_composite_storage_access_key
RECORDING_COMPOSITE_STORAGE_SECRET_KEY=your_composite_storage_secret_key
RECORDING_COMPOSITE_STORAGE_VENDOR=1
RECORDING_COMPOSITE_STORAGE_REGION=0
RECORDING_COMPOSITE_STORAGE_BUCKET=your_composite_storage_bucket
RECORDING_COMPOSITE_STORAGE_FILE_NAME_PREFIX=prefix1,prefix2

# Webpage Recording Storage Configuration
RECORDING_WEB_STORAGE_ACCESS_KEY=your_web_storage_access_key
RECORDING_WEB_STORAGE_SECRET_KEY=your_web_storage_secret_key
RECORDING_WEB_STORAGE_VENDOR=1
RECORDING_WEB_STORAGE_REGION=0
RECORDING_WEB_STORAGE_BUCKET=your_web_storage_bucket
RECORDING_WEB_STORAGE_FILE_NAME_PREFIX=prefix1,prefix2

# ============================================
# UI Configuration
# ============================================
REACT_APP_CHANNEL_LIST_REFRESH_MS=5000
REACT_APP_OVERLAY_ANIM_MS=300
CHANNEL_LIST_PAGE_SIZE=20
